<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dazhentech.faithchallengea.momentsfragment.MomentsFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/world_tab_layout"
            app:tabIndicatorColor="#f7f6f4"
            app:tabTextAppearance="@style/TabText"
            app:tabSelectedTextColor="#2f1802"
            app:tabTextColor="#ffffff"
            android:background="#f2642c">
        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/world_viewpager"/>
    </LinearLayout>

</FrameLayout>
